                                <path d="M16,3 L19,3 C20.1045695,3 21,3.8954305 21,5 L21,15.2485298 C21,15.7329761 20.8241635,16.200956 20.5051534,16.565539 L17.8762883,19.5699562 C17.6944473,19.7777745 17.378566,19.7988332 17.1707477,19.6169922 C17.1540423,19.602375 17.1383289,19.5866616 17.1237117,19.5699562 L14.4948466,16.565539 C14.1758365,16.200956 14,15.7329761 14,15.2485298 L14,5 C14,3.8954305 14.8954305,3 16,3 Z" fill="#000000"></path>
                            </g>
                        </svg>
                        <!--end::Svg Icon-->
                    </span>@Resources.Resource.Export
                </button>
                <!--begin::Dropdown Menu-->
                <div class="dropdown-menu dropdown-menu-sm dropdown-menu-right">
                    <!--begin::Navigation-->
                    <ul class="navi flex-column navi-hover py-2">
                        <li class="navi-header font-weight-bolder text-uppercase font-size-sm text-primary pb-2">@Resources.Resource.Choose_an_option:</li>
                        <li class="navi-item">
                            <a onclick="printDiv('table')" class="navi-link" id="print" data-target="print">
                                <span class="navi-icon">
                                    <i class="la la-print"></i>
                                </span>
                                <span class="navi-text">Print</span>
                            </a>
                        </li>
                        <li class="navi-item">
                            <a onclick="fnExcelReport('kt_datatable');" class="navi-link">
                                <span class="navi-icon">
                                    <i class="la la-file-excel-o"></i>
                                </span>
                                <span class="navi-text">Excel</span>
                            </a>
                        </li>
                        <li class="navi-item">
                            <a onclick="ExportSCV('kt_datatable','DonVi')" class="navi-link">
                                <span class="navi-icon">
                                    <i class="la la-file-text-o"></i>
                                </span>
                                <span class="navi-text">CSV</span>
                            </a>
                        </li>
                        <li class="navi-item">
                            <a onclick="demoFromHTML('kt_datatable')" class="navi-link">
                                <span class="navi-icon">
                                    <i class="la la-file-pdf-o"></i>
                                </span>
                                <span class="navi-text">PDF</span>
                            </a>
                        </li>
                    </ul>
                    <!--end::Navigation-->
                </div>
                <!--end::Dropdown Menu-->
            </div>
            <!--end::Dropdown-->
            <!--begin::Button-->
            <a onclick="check_Role('/Goods/Add', '', 'AddGoods')" class="btn btn-primary font-weight-bolder">
                @Resources.Resource.Thêm_Hàng_Hóa
            </a>
            <!--end::Button-->
        </div>
    </div>
    <div class="card flex-wrap py-5" style="padding: 2rem 2.25rem">
        <form class="row mr-2 align-items-center" id="form">
            <div class="col-lg-3 col-xxl-3 mb-3 mb-lg-0">
                <button type="submit" name="submit" value="" class="btn btn-light-primary font-weight-bolder btn-block">
                    <span class="svg-icon svg-icon-md mr-2">
                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                            <!-- SVG content -->
                        </svg>
                    </span>
                    <a href="~/Upload/HH.xlsx" download="">@Resources.Resource.Mẫu</a>
                </button>
            </div>
            <div class="file-upload col-lg-6 col-xxl-6 mb-3 mb-lg-0">
                <div class="file-select">
                    <div class="file-select-button" id="fileName">@Resources.Resource.Chọn_file</div>

                    <input type="file" name="UploadedFile" id="chooseFile">
                    <div class="file-select-name" id="noFile">@Resources.Resource.Không_có_file_được_chọn</div>
                </div>
            </div>
            <div class="col-lg-3 col-xxl-3">
                <button type="button" onclick="Import()" name="submit" value="" class="btn btn-light-primary font-weight-bolder btn-block">
                    <span class="svg-icon svg-icon-md mr-2">
                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                            <!-- SVG content -->
                        </svg>
                    </span>
                    @Resources.Resource.Import
                </button>
            </div>
        </form>

    </div>
    <div class="card-body">
        <!--begin: Datatable-->
        <div id="kt_datatable_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
            <div class="row">
                <div class="col-sm-12 col-md-6">
                    <div class="dataTables_length" id="kt_datatable_length">
                        <label>
                            @Resources.Resource.Show <select id="pagenum" name="kt_datatable_length" aria-controls="kt_datatable" class="custom-select custom-select-sm form-control form-control-sm">
                                <option value="10">10</option>
                                <option value="25">25</option>
                                <option value="50">50</option>
                                <option value="100">100</option>
                            </select>
                            @Resources.Resource.entries
                        </label>
                    </div>
                </div><div class="col-sm-12 col-md-6">
                    <div id="kt_datatable_filter" class="dataTables_filter">
                        <label>@Resources.Resource.Tìm_Kiếm:<input id="seach" type="search" class="form-control form-control-sm" placeholder="" aria-controls="kt_datatable"></label>
                    </div>
                </div>
            </div>
            <div class="row" id="table">
                <div class="col-sm-12">
                    <div class="table-container">
                        <table class="table table-separate table-head-custom table-checkable dataTable no-footer dtr-inline" id="kt_datatable" role="grid" aria-describedby="kt_datatable_info">
                            <thead>
                                <tr role="row">
                                    <th class="sorting" tabindex="0" aria-controls="kt_datatable" rowspan="1" colspan="1" style="width: 190px;">@Resources.Resource.STT</th>
                                    <th class="sorting" tabindex="0" aria-controls="kt_datatable" rowspan="1" colspan="1" style="width: 190px; ">@Resources.Resource.Mã_Hàng_Hóa</th>
                                    <th class="sorting" tabindex="0" aria-controls="kt_datatable" rowspan="1" colspan="1" style="width: 190px;">@Resources.Resource.Tên_Hàng_Hóa</th>
                                    <th class="sorting" tabindex="0" aria-controls="kt_datatable" rowspan="1" colspan="1" style="width: 190px;">@Resources.Resource.Đơn_Vị</th>
                                    <th class="sorting" tabindex="0" aria-controls="kt_datatable" rowspan="1" colspan="1" style="width: 190px;">@Resources.Resource.Nhóm_Hàng</th>
                                    <th class="sorting" tabindex="0" aria-controls="kt_datatable" rowspan="1" colspan="1" style="width: 190px;">@Resources.Resource.Ngày_Tạo</th>
                                    <th class="sorting" tabindex="0" aria-controls="kt_datatable" rowspan="1" colspan="1" style="width: 190px;">@Resources.Resource.Số_Lượng_Tồn</th>

                                    <th class="sorting_disabled" rowspan="1" colspan="1" style="width: 105px;" aria-label="Actions">@Resources.Resource.Hành_Động</th>
                                </tr>
                            </thead>
                            <tbody id="tbd">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12 col-md-5">
                    <div class="dataTables_info" id="kt_datatable_info" role="status" aria-live="polite"></div>
                </div>
                <div class="col-sm-12 col-md-7">
                    <div class="dataTables_paginate paging_simple_numbers" id="kt_datatable_paginate">
                        <ul class="pagination" id="page">
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!--end: Datatable-->
    </div>
</div>

<!-- Button trigger modal-->
@section scripts{
    <script>
        $('#chooseFile').bind('change', function () {
            var filename = $("#chooseFile").val();
            console.log(filename)
            if (/^\s*$/.test(filename)) {
                $(".file-upload").removeClass('active'); $("#noFile").empty()
                $("#noFile").append("@Resources.Resource.Không_có_file_được_chọn...");
               /* $(".file-select").css("overflow","visible")*/
            }
            else {

                $(".file-upload").addClass('active');
                $("#noFile").text(filename.replace("C:\\fakepath\\", ""));
            }
        });
        function Import() {
            try {
                let fileUpload = $('input[name="UploadedFile"]').get(0);
                let form = document.getElementById('form')
                let files = fileUpload.files;
                let formdata = new FormData(form);
                formdata.append('file', files[0]);
                $.ajax({
                    type: 'post',
                    url: '/Goods/Upload',
                    contentType: false,
                    processData: false,
                    data: formdata,
                    success: function (data) {
                        if (data.status == 200) {
                            Swal.fire(data.msg);
                            setTimeout(function () { window.location.href = "/Goods/Index"; }, 1000);
                        } else {
                            Swal.fire(data.msg);
                        }

                    }
                })
            } catch (error) {
                Swal.fire(error.message, "", "error")
            }
        }

           // truyền tài nguyên resources sang js
        var resources = {
            "edit": "@Resources.Resource.Sửa",
            "delete": "@Resources.Resource.Xóa",
            "print": "@Resources.Resource.In",
            "DeleteWarning": "@Resources.Resource.DeleteWarning",
            "ConfirmDeleteWarning": @Html.Raw(Json.Encode(Resources.Resource.ConfirmDeleteWarning.ToString())), //mã hóa chuỗi tránh gây lỗi ký tự
            "DeleteInfo": "@Resources.Resource.DeleteInfo",
            "CancelInfo": "@Resources.Resource.CancelInfo",
        };
    </script>
    <script src="~/Scripts/Goods.js"></script>

}

